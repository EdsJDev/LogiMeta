<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ColetaDeDadosActivity">

    <Button
        android:id="@+id/embalado_nao_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Não"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/embalado_sim_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/embalado_sim_button"
        app:layout_constraintTop_toTopOf="@+id/embalado_sim_button" />

    <TextView
        android:id="@+id/corte_no_endereco_textView"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Corte no endereço?"
        android:textColor="#a2b427"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/embalado_sim_button" />

    <Button
        android:id="@+id/finalizar_ir_para_SaveScreen_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finalizar"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/proximo_ir_saveScreen_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/proximo_ir_saveScreen_button"
        app:layout_constraintTop_toTopOf="@+id/proximo_ir_saveScreen_button" />

    <ImageView
        android:id="@+id/voltar2_imageView"
        android:layout_width="64dp"
        android:layout_height="98dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/proximo_ir_saveScreen_button"
        app:srcCompat="@drawable/turnback" />

    <Button
        android:id="@+id/proximo_ir_saveScreen_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Próximo"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/finalizar_ir_para_SaveScreen_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/corte_no_endereco_sim_button" />

    <Button
        android:id="@+id/embalado_sim_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sim"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/embalado_nao_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/produto_foi_embalado_textView" />

    <TextView
        android:id="@+id/produto_foi_embalado_textView"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="O produto foi embalado?"
        android:textColor="#a2b427"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quantidade_de_itens_coletados_textInputLayout" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/quantidade_de_itens_coletados_textInputLayout"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        app:boxBackgroundColor="#c08a52"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quantidade_de_itens_coletados_textView">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/quantidade_de_itens_coletados_TextInputEditText"
            android:layout_width="370dp"
            android:layout_height="48dp"
            android:inputType="number|numberDecimal"
            android:padding="4dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/quantidade_de_itens_coletados_textView"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="quantidade de itens coletados"
        android:textColor="#a2b427"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rua_referente_ao_endereco_textInputLayout" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/rua_referente_ao_endereco_textInputLayout"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        app:boxBackgroundColor="#c08a52"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rua_referente_ao_endereco_textView">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/rua_referente_ao_endereco_TextInputEditText"
            android:layout_width="370dp"
            android:layout_height="48dp"
            android:inputType="number|numberDecimal"
            android:padding="4dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/rua_referente_ao_endereco_textView"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Rua referente ao endereço"
        android:textColor="#a2b427"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contador_cronometro_textView" />

    <TextView
        android:id="@+id/contador_cronometro_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="00:00"
        android:textColor="#a2b427"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Cronômetro"
        android:textColor="#a2b427"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Coleta de Dados"
        android:textColor="#a2b427"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/corte_no_endereco_sim_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIm"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/corte_no_endereco_nao_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/corte_no_endereco_textView" />

    <Button
        android:id="@+id/corte_no_endereco_nao_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Não"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/corte_no_endereco_sim_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/corte_no_endereco_sim_button"
        app:layout_constraintTop_toTopOf="@+id/corte_no_endereco_sim_button" />
</androidx.constraintlayout.widget.ConstraintLayout>