<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    tools:context=".ColetaDeDadosActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TÍTULO PRINCIPAL -->
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:text="Coleta de Dados"
            android:textColor="@color/accent_color"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- CRONÔMETRO -->
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Cronômetro"
            android:textColor="@color/accent_color"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/contador_cronometro_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="00:00"
            android:textColor="@color/accent_color"
            android:textSize="48sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- ENDEREÇO -->
        <TextView
            android:id="@+id/rua_referente_ao_endereco_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Rua Referente ao Endereço"
            android:textColor="@color/accent_color"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/contador_cronometro_textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/rua_referente_ao_endereco_textInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/fundoMenu"
            app:layout_constraintTop_toBottomOf="@+id/rua_referente_ao_endereco_textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/rua_referente_ao_endereco_TextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="text"
                android:padding="4dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- ITENS COLETADOS -->
        <TextView
            android:id="@+id/quantidade_de_itens_coletados_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Quantidade de Itens Coletados"
            android:textColor="@color/accent_color"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/rua_referente_ao_endereco_textInputLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/quantidade_de_itens_coletados_textInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/fundoMenu"
            app:layout_constraintTop_toBottomOf="@+id/quantidade_de_itens_coletados_textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/quantidade_de_itens_coletados_TextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="number"
                android:padding="4dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- COM SACO-FRUTA -->
        <TextView
            android:id="@+id/produto_foi_embalado_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Com Saco-Fruta?"
            android:textColor="@color/accent_color"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/quantidade_de_itens_coletados_textInputLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/embalado_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/produto_foi_embalado_textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/embalado_sim_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sim"
                android:textSize="18sp"
                android:textColor="@color/accent_color"
                android:layout_marginEnd="16dp" />

            <Button
                android:id="@+id/embalado_nao_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Não"
                android:textSize="18sp"
                android:textColor="@color/accent_color" />
        </LinearLayout>

        <!-- CORTE NO ENDEREÇO -->
        <TextView
            android:id="@+id/corte_no_endereco_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Corte no Endereço?"
            android:textColor="@color/accent_color"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/embalado_group"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/corte_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/corte_no_endereco_textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/corte_no_endereco_sim_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sim"
                android:textSize="18sp"
                android:textColor="@color/accent_color"
                android:layout_marginEnd="16dp" />

            <Button
                android:id="@+id/corte_no_endereco_nao_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Não"
                android:textSize="18sp"
                android:textColor="@color/accent_color" />
        </LinearLayout>

        <!-- CAIXA FECHADA -->
        <TextView
            android:id="@+id/caixa_fechada_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Caixa Fechada?"
            android:textColor="@color/accent_color"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/corte_group"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/caixa_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/caixa_fechada_textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/caixa_fechada_sim_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sim"
                android:textSize="18sp"
                android:textColor="@color/accent_color"
                android:layout_marginEnd="16dp" />

            <Button
                android:id="@+id/caixa_fechada_nao_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Não"
                android:textSize="18sp"
                android:textColor="@color/accent_color" />
        </LinearLayout>

        <!-- BOTÕES FINAIS -->
        <LinearLayout
            android:id="@+id/action_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/caixa_group"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/proximo_ir_saveScreen_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Próximo"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/accent_color"
                android:layout_marginEnd="16dp" />

            <Button
                android:id="@+id/finalizar_ir_para_SaveScreen_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finalizar"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/accent_color" />
        </LinearLayout>

        <!-- ÍCONE DE VOLTAR -->
        <ImageView
            android:id="@+id/voltar2_imageView"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="24dp"
            android:contentDescription="Voltar"
            app:srcCompat="@drawable/turnback"
            app:layout_constraintTop_toBottomOf="@+id/action_group"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
