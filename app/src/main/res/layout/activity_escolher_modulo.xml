<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EscolherModuloActivity">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Escolher Módulo"
        android:textColor="@color/accent_color"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout8"
        style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:padding="4dp"
        android:textColor="@color/accent_color"
        android:textColorHint="#FFEA00"
        app:boxBackgroundColor="@color/fundoMenu"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <AutoCompleteTextView
            android:id="@+id/moduloSelecionadoAutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textColorLink="#c08a52"
            android:textSize="20sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/avancar_escolher_modulo_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="24dp"
        android:text="Avançar"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/accent_color"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout8"
        app:layout_constraintEnd_toStartOf="@+id/voltar_escolher_modulo_button"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/voltar_escolher_modulo_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/accent_color"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintTop_toTopOf="@+id/avancar_escolher_modulo_button"
        app:layout_constraintBottom_toBottomOf="@+id/avancar_escolher_modulo_button"
        app:layout_constraintStart_toEndOf="@+id/avancar_escolher_modulo_button"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
