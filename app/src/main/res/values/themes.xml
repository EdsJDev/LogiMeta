<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema base do aplicativo para modo CLARO (padrão) -->
    <style name="Base.Theme.LogiMeta" parent="Theme.Material3.DayNight.NoActionBar">
        <!--            Itens de customização que usam referências. -->
        <item name="colorPrimary">@color/button_background_color</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:textColor">@color/accent_color</item>
        <item name="colorAccent">@color/accent_color</item>
    </style>

    <style name="Theme.LogiMeta" parent="Base.Theme.LogiMeta" />

    <!-- =============================================================== -->
    <!--          ESTILO CUSTOMIZADO PARA O ALERTDIALOG (CLARO)          -->
    <!-- =============================================================== -->
    <style name="AlertDialogTheme_Custom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Cor de fundo do diálogo -->
        <item name="android:background">@color/background_color</item>

        <!-- Cor do texto -->
        <item name="android:textColorPrimary">@color/white</item>

        <!-- Cor do Texto da Mensagem -->
        <item name="android:textColorSecondary">@color/white</item>

        <!-- Cor dos botões ("Excluir", "Cancelar") -->
        <item name="colorAccent">@color/button_background_color</item>
    </style>

    <!-- Estilo para o TÍTULO do AlertDialog -->
    <style name="AlertDialogTitle_Custom" parent="RtlOverlay.DialogWindowTitle.AppCompat">
        <!-- A COR É DEFINIDA EM textColorPrimary. Aqui definimos apenas o resto. -->
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
